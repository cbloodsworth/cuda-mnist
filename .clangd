CompileFlags:
  Add: 
    - '-std=c++20'
    - '--no-cuda-version-check'
  Remove: 
    - '--options-file'
    - '-forward-unknown-to-host-compiler'
    - '--generate-code=arch=compute_75,code=[compute_75,sm_75]'
    - '-rdc=true'
  
Diagnostics:
  ClangTidy:
    Add: [performance-*, modernize-*]
    Remove: [modernize-use-trailing-return-type]

Index:
  Background: Build
